---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>

<feed xmlns="http://www.w3.org/2005/Atom">
 
 <title>{{ site.author.name}} news</title>
 <link rel="self" type="application/atom+xml" href="{{ site.url }}/info/news/atom.xml" title="RSS feed" />

 <logo>{{ site.url }}/apple-touch-icon.png</logo>
 <icon>{{ site.url }}/favicon2013.ico</icon>

 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>{{ site.url }}/info/news/</id>
 <author>
   <name>{{ site.author.name }}</name>
   <email>{{ site.author.email }}</email>
 </author>
 
 {% for post in site.categories.news %}
 <entry>
   <title>{{ post.title }}</title>
   <link href="{{ site.url }}{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>{{ site.url }}{{ post.id }}</id>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endfor %}
 
</feed>